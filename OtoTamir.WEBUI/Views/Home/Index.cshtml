
@model DashboardViewModel

@{
    ViewData["Title"] = "Anasayfa";
    
}

<div class="d-flex justify-content-between align-items-end mb-3 border-bottom pb-2">
    <div>
        
        <h3 class="fw-bold text-dark mb-0">Atölye Paneli</h3>
    </div>
    <div class="d-none d-md-block">
        <a data-bs-toggle="modal" data-bs-target="#createClientModal" class="btn btn-sm btn-light border me-2 text-muted">
            <i class="bi bi-person-plus-fill me-1"></i> Müşteri Ekle
        </a>
        <a href="/ServiceRecord/Index" class="btn btn-sm btn-primary shadow-sm px-3">
            <i class="bi bi-plus-lg me-1"></i> Yeni Kayıt
        </a>
    </div>
</div>

<div class="container-fluid p-0">

    <h6 class="text-muted fw-bold mb-2 ms-1" style="font-size: 0.85rem;">GÜNLÜK AKIŞ</h6>
    <div class="row g-3 mb-4">
        
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-3 border-info">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Bugün Gelen</div>
                        <h4 class="fw-bold text-dark mb-0">@Model.TodayJobCount</h4>
                    </div>
                    <div class="bg-info bg-opacity-10 text-info rounded p-2">
                        <i class="bi bi-box-arrow-in-down fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-3 border-primary">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Aktif Araç</div>
                        <h4 class="fw-bold text-dark mb-0">@Model.ActiveVehicleCount</h4>
                    </div>
                    <div class="bg-primary bg-opacity-10 text-primary rounded p-2">
                        <i class="bi bi-gear-wide-connected fs-4 spin-icon"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-3 border-success">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">Tamamlanan</div>
                        <h4 class="fw-bold text-dark mb-0">@Model.CompletedJobCount</h4>
                    </div>
                    <div class="bg-success bg-opacity-10 text-success rounded p-2">
                        <i class="bi bi-check-lg fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 border-start border-3 border-danger">
                <div class="card-body p-3 d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-uppercase text-muted fw-bold" style="font-size: 0.7rem;">İptal Edilen</div>
                        <h4 class="fw-bold text-dark mb-0">@Model.CancelledJobCount</h4>
                    </div>
                    <div class="bg-danger bg-opacity-10 text-danger rounded p-2">
                        <i class="bi bi-x-lg fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <h6 class="text-muted fw-bold mb-2 ms-1" style="font-size: 0.85rem;">GELİR PERFORMANSI</h6>
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white border-0 shadow-sm" style="background: linear-gradient(135deg, #198754 0%, #20c997 100%);">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-white-50 fw-bold" style="font-size: 0.7rem;">BUGÜN</span>
                            <h4 class="fw-bold mb-0">@Model.TodayIncome.ToString("N0") ₺</h4>
                        </div>
                        <i class="bi bi-graph-up-arrow fs-4 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-primary text-white border-0 shadow-sm" style="background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%);">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-white-50 fw-bold" style="font-size: 0.7rem;">BU AY</span>
                            <h4 class="fw-bold mb-0">@Model.MonthlyIncome.ToString("N0") ₺</h4>
                        </div>
                        <i class="bi bi-calendar2-check fs-4 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-dark text-white border-0 shadow-sm" style="background: linear-gradient(135deg, #212529 0%, #495057 100%);">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-white-50 fw-bold" style="font-size: 0.7rem;">BU YIL</span>
                            <h4 class="fw-bold mb-0">@Model.YearlyIncome.ToString("N0") ₺</h4>
                        </div>
                        <i class="bi bi-trophy fs-4 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h6 class="text-muted fw-bold mb-2 ms-1" style="font-size: 0.85rem;">KASA & VARLIKLAR</h6>
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm" style="background-color: #fff8e1;"> <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="fw-bold" style="font-size: 0.7rem; color: #b78900;">ELDEKİ NAKİT</span>
                            <h4 class="fw-bold mb-0" style="color: #856404;">@Model.CashBalance.ToString("N0") ₺</h4>
                        </div>
                        <i class="bi bi-cash-stack fs-4" style="color: #b78900;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm" style="background-color: #eef0ff;"> <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="fw-bold" style="font-size: 0.7rem; color: #5a5c9c;">BANKA</span>
                            <h4 class="fw-bold mb-0" style="color: #303270;">@Model.BankBalance.ToString("N0") ₺</h4>
                        </div>
                        <i class="bi bi-bank2 fs-4" style="color: #5a5c9c;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm" style="background-color: #fce8e6;"> <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="fw-bold text-danger" style="font-size: 0.7rem;">TOPLAM ALACAK</span>
                            <h4 class="fw-bold text-danger mb-0">@Model.TotalDebt.ToString("N0") ₺</h4>
                        </div>
                        <i class="bi bi-exclamation-octagon fs-4 text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="mb-0 fw-bold"><i class="bi bi-clock-history me-2 text-primary"></i>Son Gelen Araçlar</h6>
                <a href="/ServiceRecord/Ongoing" class="btn btn-sm btn-light">Tümünü Gör</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Plaka / Araç</th>
                            <th>Müşteri</th>
                            <th>Durum</th>
                            <th>Giriş Tarihi</th>
                            <th class="text-end pe-4">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentServices != null && Model.RecentServices.Any())
                        {
                            foreach (var item in Model.RecentServices)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="fw-bold text-dark">@item.Vehicle.Plate</div>
                                        <small class="text-muted">@item.Vehicle.Brand @item.Vehicle.Model</small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                <i class="bi bi-person text-secondary"></i>
                                            </div>
                                            <span>@item.Vehicle.Client.Name</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @item.Status.ToBadgeClass()">
                                            @item.Status.ToTurkish()
                                        </span>
                                    </td>
                                    <td class="text-muted small">
                                        <i class="bi bi-calendar3 me-1"></i> @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#detailModal-@item.Id">
                                            Detay
                                            <i class="bi bi-chevron-right ms-1"></i>
                                            </button>
                                       
                                        <div class="modal fade" id="detailModal-@item.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    @await Component.InvokeAsync("_ListServiceRecordDetailsViewComponentPartial", item.Id)
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2 opacity-50"></i>
                                    Henüz kayıt bulunmuyor.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="createClientModal" tabindex="-1">
    @await Component.InvokeAsync("_CreateClientViewComponentPartial", "/Client/Clients")
</div>
