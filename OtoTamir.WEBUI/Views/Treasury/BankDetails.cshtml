@model BankDetailsDTO
@{
    ViewData["Title"] = Model.BankName + " Detayları";
}

<div class="row mb-3">
    <div class="col-12">
        <div class="callout callout-info bg-white shadow-sm py-2">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="text-primary m-0">
                    <i class="fas fa-university mr-2"></i>Banka: @Model.BankName
                    <small class="text-muted ml-2" style="font-size: 0.8rem;">Hesap Sahibi: @Model.OwnerName</small>
                </h5>
                <span class="font-weight-bold text-dark">IBAN: TR @Model.Iban</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 col-sm-6 col-12">
        <div class="info-box bg-primary shadow-sm">
            <span class="info-box-icon"><i class="fas fa-wallet"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Güncel Bakiye</span>
                <span class="info-box-number">@Model.CurrentBalance.ToString("C2")</span>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-6 col-12">
        <div class="info-box bg-success shadow-sm">
            <span class="info-box-icon"><i class="fas fa-arrow-down"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Son 30 Gün Giriş</span>
                <span class="info-box-number">@Model.TotalIncomingLastMonth.ToString("C2")</span>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-6 col-12">
        <div class="info-box bg-danger shadow-sm">
            <span class="info-box-icon"><i class="fas fa-arrow-up"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Son 30 Gün Çıkış</span>
                <span class="info-box-number">@Model.TotalOutgoingLastMonth.ToString("C2")</span>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mt-2">
    <div class="card-header border-0">
        <h3 class="card-title">Hesap Hareketleri</h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover table-striped text-nowrap">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Açıklama</th>
                    <th class="text-right">Tutar</th>
                    <th>Yapan</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Transactions)
                {
                    <tr>
                        <td>@item.TransactionDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.Description</td>
                        <td class="text-right font-weight-bold @(item.TransactionType == OtoTamir.CORE.Entities.TransactionType.Incoming ? "text-success" : "text-danger")">
                            @(item.TransactionType == OtoTamir.CORE.Entities.TransactionType.Incoming ? "+" : "-") @item.Amount.ToString("C2")
                        </td>
                        <td>@item.AuthorName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>