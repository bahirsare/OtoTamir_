@model ListServiceRecordsDTO

<h2 class="mb-4">Devam Eden Servis Kayıtları</h2>

<form asp-action="Ongoing" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-2">
            <label>Müşteri Adı</label>
            <input type="text" name="ClientName" value="@Model.ClientName" class="form-control" placeholder="Müşteri Adı" />
        </div>
        
        <div class="col-md-2">
            <label>Araç Plakası/Markası</label>
            <input type="text" name="VehicleName" value="@Model.VehicleName" class="form-control" placeholder="Araç Plakası/Markası" />
        </div>
        <div class="col-md-2">
            <label>İşlem Durumu</label>
            <select name="CurrentStatus" class="form-control">
                <option value="">Tüm Durumlar</option>
                <option value="Devam Ediyor" selected="@(Model.CurrentStatus == "Devam Ediyor")">Devam Ediyor</option>
                <option value="Tamamlandı" selected="@(Model.CurrentStatus == "Tamamlandı")">Tamamlandı</option>
                <option value="İptal Edildi" selected="@(Model.CurrentStatus == "İptal Edildi")">İptal Edildi</option>
            </select>
        </div>
        <div class="col-md-2">
            <label>Başlangıç Tarihi</label>
            <input type="date" name="StartDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" class="form-control" />
        </div>
        <div class="col-md-2">
            <label>Bitiş Tarihi</label>
            <input type="date" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" class="form-control" />
        </div>
        <div class="col-md-2">
            <label></label>
            <button type="submit" class="btn btn-primary w-100">Filtrele</button>
        </div>
    </div>
</form>


<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>
                <a asp-action="Ongoing"
                   asp-route-SortColumn="ClientName"
                   asp-route-SortDirection="@(Model.SortDirection == "asc" && Model.SortColumn == "ClientName" ? "desc" : "asc")">
                    Müşteri
                </a>
            </th>
            <th>
                <a asp-action="Ongoing"
                   asp-route-SortColumn="VehicleName"
                   asp-route-SortDirection="@(Model.SortDirection == "asc" && Model.SortColumn == "VehicleName" ? "desc" : "asc")">
                    Araç Adı
                </a>
            </th>
            <th>
                <a asp-action="Ongoing"
                   asp-route-SortColumn="VehiclePlate"
                   asp-route-SortDirection="@(Model.SortDirection == "asc" && Model.SortColumn == "VehiclePlate" ? "desc" : "asc")">
                    Araç Plakası
                </a>
            </th>
            <th>
                <a asp-action="Ongoing"
                   asp-route-SortColumn="Status"
                   asp-route-SortDirection="@(Model.SortDirection == "asc" && Model.SortColumn == "Status" ? "desc" : "asc")">
                    Durum
                </a>
            </th>
            <th>
                <a asp-action="Ongoing"
                   asp-route-SortColumn="CreatedDate"
                   asp-route-SortDirection="@(Model.SortDirection == "asc" && Model.SortColumn == "CreatedDate" ? "desc" : "asc")">
                    Oluşturulma Tarihi
                </a>
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Records != null && Model.Records.Any())
        {
            foreach (var record in Model.Records)
            {
                <tr>
                    <td>@record.Vehicle.Client.Name</td>
                    <td>@record.Vehicle.Name</td>
                    <td>@record.Vehicle.Plate</td>
                    <td>@record.Status</td>
                    <td>@record.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#detailModal-@record.Id" data-id="@record.Id">
                            Detay
                        </button>
                        <div class="modal fade" id="detailModal-@record.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content" id="detailModalContent">
                                    @await Component.InvokeAsync("_ListServiceRecordDetailsViewComponentPartial",@record.Id)
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@record.Id" data-id="@record.Id">
                            Düzenle
                        </button>
                        <div class="modal fade" id="editModal-@record.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content" id="editModalContent">
                                    @await Component.InvokeAsync("_EditServiceRecordViewComponentPartial", @record.Id)
                                </div>
                            </div>
                        </div>
                        <form asp-action="Cancel" asp-controller="ServiceRecord" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@record.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('İşlemi iptal etmek istediğinize emin misiniz?');">
                                İptal Et
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Kayıt bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        document.body.addEventListener('click', function (e) {
            if (e.target.classList.contains('add-part-btn')) {
                const btn = e.target;
                const symptomId = btn.getAttribute('data-symptom-id');
                const container = document.getElementById(`sparePartsContainer-${symptomId}`);
                if (!container) return;

                const row = document.createElement('div');
                row.className = 'input-group mb-2';
                row.innerHTML = `
                        <input name="SparePartNames" class="form-control me-1" placeholder="Parça Adı" />
                        <input name="SparePartDescriptions" class="form-control me-1" placeholder="Açıklama (isteğe bağlı)" />
                        <button type="button" class="btn btn-outline-danger remove-part-btn">-</button>
                    `;
                container.appendChild(row);
            }

            if (e.target.classList.contains('remove-part-btn')) {
                const row = e.target.closest('.input-group');
                if (row) row.remove();
            }
        });
    </script>
}




