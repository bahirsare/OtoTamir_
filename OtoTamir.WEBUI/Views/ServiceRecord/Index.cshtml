@model ServiceRecord
@{
    ViewData["Title"] = "İşlem Ekle - Plaka Sorgu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>İşlem Başlat</h2>

<form asp-action="AddByPlate" method="post">
    <div class="form-group">
        <label for="plate">Plaka:</label>
        <input type="text" name="plate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Ara</button>
</form>

@if (TempData["PlateNotFound"] != null)
{
    <div class="alert alert-warning mt-3">
        <strong>@TempData["PlateNotFound"]</strong> plakalı araç bulunamadı.
        <a class="btn btn-sm btn-warning" asp-action="AddVehicle" asp-controller="Vehicle">Araç Ekle</a>
    </div>
}
<h2>Yeni İşlem Ekle</h2>

<form asp-action="Save" method="post">
    <input type="hidden" asp-for="VehicleId" />

    <div class="form-group">
        <label>Plaka:</label>
        <input class="form-control" value="@Model.Vehicle.Plate" disabled />
    </div>

    <div class="form-group">
        <label>Müşteri:</label>
        <input class="form-control" value="@Model.Vehicle.Client.Name" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Name">Şikayet:</label>
        <textarea class="form-control" asp-for="Name"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Description">Açıklama:</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Price">Tahmini Fiyat:</label>
        <input type="number" step="0.01" asp-for="Price" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Kaydet</button>
</form>