@model OtoTamir.CORE.DTOs.TreasuryDTOs.AddBankDTO

<div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content shadow rounded">
        <form asp-controller="Treasury" asp-action="AddBank" method="post">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bi bi-bank2 me-2"></i>Yeni Banka Hesabı Ekle
                </h5>
                <button type="button" class="btn-close btn-close-white" data-dismiss="modal" aria-label="Kapat"></button>
            </div>

            <div class="modal-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger m-3 d-none"></div>

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="BankName" class="form-label fw-semibold">Banka Adı</label>
                        <input asp-for="BankName" class="form-control shadow-sm" required placeholder="Örn: Ziraat Bankası" />
                        <span asp-validation-for="BankName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="OwnerName" class="form-label fw-semibold">Hesap Sahibi / Şube</label>
                        <input asp-for="OwnerName" class="form-control shadow-sm" placeholder="Örn: Ahmet Yılmaz / Ostim Şb." />
                        <span asp-validation-for="OwnerName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Iban" class="form-label fw-semibold">IBAN / Hesap No</label>
                        <div class="input-group shadow-sm">
                            <span class="input-group-text bg-light text-muted fw-bold">TR</span>
                            <input asp-for="Iban" class="form-control" placeholder="Hesap numarasını giriniz..." maxlength="32" />
                        </div>
                        <span asp-validation-for="Iban" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="InitialBalance" class="form-label fw-semibold">Başlangıç Bakiyesi (₺)</label>
                        <div class="input-group shadow-sm">
                            <input asp-for="InitialBalance" type="number" class="form-control" value="0" step=".01" />
                            <span class="input-group-text bg-light">₺</span>
                        </div>
                        <span asp-validation-for="InitialBalance" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 d-flex align-items-end pb-1">
                        <small class="text-muted fst-italic">
                            <i class="bi bi-info-circle"></i> Bu bakiye, hesap açılış bakiyesi olarak kaydedilecektir.
                        </small>
                    </div>

                </div>
            </div>

            <div class="modal-footer bg-light border-top">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="bi bi-x-circle"></i> Vazgeç</button>
                <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Kaydet</button>
            </div>

        </form>
    </div>
</div>