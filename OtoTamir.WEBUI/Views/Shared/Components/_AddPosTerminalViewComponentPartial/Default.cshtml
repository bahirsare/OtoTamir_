@model OtoTamir.CORE.DTOs.TreasuryDTOs.AddPosTerminalDTO

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header bg-primary">
            <h4 class="modal-title"><i class="fas fa-calculator mr-2"></i>Yeni POS Cihazı Tanımla</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form asp-controller="Treasury" asp-action="AddPosTerminal" method="post">
            <div class="modal-body">
                <div class="form-group">
                    <label>POS Adı</label>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Örn: Ziraat Ana POS" required>
                </div>

                <div class="form-group">
                    <label>Bağlı Olduğu Banka Hesabı</label>
                    <select asp-for="BankId" class="form-control" required>
                        <option value="">Seçiniz...</option>
                        @if (ViewBag.Banks != null)
                        {
                            foreach (var bank in ViewBag.Banks)
                            {
                                <option value="@bank.Id">@bank.BankName (@bank.Iban)</option>
                            }
                        }
                    </select>
                    <small class="text-muted">Bu POS'tan çekilen paralar hangi hesaba yatıyor?</small>
                </div>

                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Komisyon Oranı (%)</label>
                            <input type="number" asp-for="CommissionRate" class="form-control" step="0.01" placeholder="1.50">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label>Vade / Blokaj (Gün)</label>
                            <input type="number" asp-for="MaturityDays" class="form-control" placeholder="1 (Ertesi Gün)">
                            <small class="text-muted">Para hesaba kaç gün sonra geçiyor?</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>