@model Vehicle

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Uygulanan İşlem</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Son Güncelleme Tarihi</th>
            <th>Durum</th>
            <th>Yazar</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach(var record in Model.ServiceRecords)
        {
            <tr>
                <td>@record.CreatedDate</td>
                
                <td>@record.Name</td>
                <td>@record.Description</td>
                <td>@record.Price</td>
                <td>@record.ModifiedDate</td>

                <td>@record.Status</td>
                <td>@record.AuthorName</td>
            </tr>
        }
        
    </tbody>
</table>