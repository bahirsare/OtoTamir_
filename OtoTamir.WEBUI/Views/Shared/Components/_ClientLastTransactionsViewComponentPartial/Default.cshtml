@using OtoTamir.CORE.Entities
@model Client

<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="p-3 bg-light rounded border border-dashed d-flex align-items-center justify-content-between">
            <div>
                <small class="text-muted fw-bold d-block">TOPLAM İŞLEM HACMİ</small>
                <span class="fs-4 fw-bold text-dark">
                    @Model.Vehicles.SelectMany(v => v.ServiceRecords).Sum(x => x.Price).ToString("C2")
                </span>
            </div>
            <div class="bg-white p-2 rounded-circle shadow-sm text-primary">
                <i class="bi bi-graph-up-arrow fs-4"></i>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="p-3 rounded border d-flex align-items-center justify-content-between @(Model.Balance > 0 ? "bg-danger bg-opacity-10 border-danger" : "bg-success bg-opacity-10 border-success")">
            <div>
                <small class="text-muted fw-bold d-block">GÜNCEL BAKİYE (BORÇ)</small>
                <span class="fs-4 fw-bold @(Model.Balance > 0 ? "text-danger" : "text-success")">
                    @Model.Balance.ToString("C2")
                </span>
            </div>
            <div class="bg-white p-2 rounded-circle shadow-sm @(Model.Balance > 0 ? "text-danger" : "text-success")">
                <i class="bi bi-wallet2 fs-4"></i>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-end mb-3">
    <button class="btn btn-outline-success btn-sm fw-bold shadow-sm"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#paymentCollapse"
            aria-expanded="false"
            aria-controls="paymentCollapse">
        <i class="bi bi-cash-coin me-2"></i>Tahsilat Ekle (Ödeme Al)
    </button>
</div>

<div class="collapse mb-4" id="paymentCollapse">
    <div class="card card-body border-success bg-success bg-opacity-10 shadow-sm">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h6 class="fw-bold text-success mb-0"><i class="bi bi-plus-circle me-2"></i>Yeni Tahsilat Girişi</h6>
            
        </div>

        @await Component.InvokeAsync("_AddPaymentViewComponentPartial", new { clientId = Model.Id, currentBalance = Model.Balance })
    </div>
</div>
<h6 class="border-bottom pb-2 mb-3 fw-bold text-secondary">
    <i class="bi bi-clock-history me-2"></i>Son Hareketler
</h6>

@if (Model.Vehicles.Any() && Model.Vehicles.SelectMany(v => v.ServiceRecords).Any())
{
    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light sticky-top">
                <tr>
                    <th class="ps-3">Tarih</th>
                    <th>Araç</th>
                    <th>İşlem / Açıklama</th>
                    <th class="text-end pe-3">Tutar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.Vehicles.SelectMany(v => v.ServiceRecords).OrderByDescending(x => x.CreatedDate))
                {
                    <tr>
                        <td class="ps-3 text-nowrap">
                            <span class="fw-semibold text-dark d-block">@record.CreatedDate.ToString("dd.MM.yyyy")</span>
                            <small class="text-muted">@record.CreatedDate.ToString("HH:mm")</small>
                        </td>
                        <td>
                            <div class="badge bg-secondary bg-opacity-10 text-secondary border">
                                <i class="bi bi-car-front-fill me-1"></i>
                                @(record.Vehicle?.Plate ?? "-")
                            </div>
                        </td>
                        <td>
                            <div class="fw-bold text-primary">@record.Name</div>
                            @if (!string.IsNullOrEmpty(record.Description))
                            {
                                <small class="text-muted d-block text-truncate" style="max-width: 250px;">
                                    @record.Description
                                </small>
                            }
                        </td>
                        <td class="text-end pe-3">
                            <span class="fw-bold fs-6 text-dark">
                                @record.Price.ToString("C2")
                            </span>
                            @if(record.Status == OtoTamir.CORE.Entities.ServiceStatus.Completed)
                            {
                                <i class="bi bi-check-circle-fill text-success ms-1 small" title="Tamamlandı"></i>
                            }
                            else if (record.Status == OtoTamir.CORE.Entities.ServiceStatus.Cancelled)
                            {
                                <i class="bi bi-x-circle-fill text-danger ms-1 small" title="İptal"></i>
                            }
                            else
                            {
                                <i class="bi bi-hourglass-split text-warning ms-1 small" title="Devam Ediyor"></i>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <div class="bg-light rounded-circle p-4 d-inline-block mb-3">
            <i class="bi bi-receipt text-muted opacity-50" style="font-size: 2rem;"></i>
        </div>
        <p class="text-muted">Henüz kayıtlı bir işlem hareketi bulunmuyor.</p>
    </div>
}