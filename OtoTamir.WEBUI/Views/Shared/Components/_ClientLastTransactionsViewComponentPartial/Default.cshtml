@using OtoTamir.CORE.Entities
@model List<TreasuryTransaction>


    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title font-weight-bold">
                    <i class="fas fa-file-invoice-dollar mr-2"></i>Finansal Hareket Dökümü
                </h5>
                <button type="button" class="close text-white opacity-75" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body p-0 bg-light">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0 text-nowrap align-middle">
                            <thead class="bg-white border-bottom small text-muted text-uppercase">
                                <tr>
                                    <th class="pl-4">Tarih / Saat</th>
                                    <th>İşlem Tipi</th>
                                    <th>Ödeme Yöntemi</th>
                                    <th>Açıklama</th>
                                    <th class="text-right pr-4">Tutar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    // Renk ve İkon Mantığı
                                    var isIncoming = item.TransactionType == TransactionType.Incoming;
                                    var rowClass = isIncoming ? "border-left-success" : "border-left-danger"; // Özel CSS gerekebilir veya inline stil
                                    var textClass = isIncoming ? "text-success" : "text-danger";
                                    var icon = isIncoming ? "fa-arrow-down" : "fa-arrow-up";
                                    var badgeClass = isIncoming ? "badge-light-success" : "badge-light-danger"; // Custom badge

                                    // Ödeme Yöntemi İkonu
                                    string methodIcon = item.PaymentSource switch
                                    {
                                        PaymentSource.Cash => "fa-money-bill-wave text-success",
                                        PaymentSource.CreditCard => "fa-credit-card text-info",
                                        PaymentSource.Bank => "fa-university text-warning",
                                        _ => "fa-circle text-secondary"
                                    };

                                    <tr class="bg-white">
                                        <td class="pl-4">
                                            <div class="d-flex flex-column">
                                                <span class="font-weight-bold text-dark">@item.TransactionDate.ToString("dd.MM.yyyy")</span>
                                                <small class="text-muted">@item.TransactionDate.ToString("HH:mm")</small>
                                            </div>
                                        </td>
                                        <td>
                                            @if (isIncoming)
                                            {
                                            <span class="badge badge-success px-2 py-1 text-dark font-weight-bold" ><i class="fas fa-plus-circle mr-1"></i> Tahsilat</span>
                                            }
                                            else
                                            {
                                            <span class="badge badge-danger px-2 py-1 text-dark font-weight-bold"><i class="fas fa-minus-circle mr-1"></i> Borç/Gider</span>
                                            }
                                        </td>
                                        <td>
                                            <i class="fas @methodIcon mr-2" style="width:20px; text-align:center;"></i>
                                            <span class="text-muted small"
                                            >
                                                @if (item.PaymentSource == PaymentSource.Cash)
                                                {
                                                    <text>Nakit</text>
                                                }
                                                else if (item.PaymentSource == PaymentSource.CreditCard)
                                                {

                                                    <text>Kredi Kartı</text>
                                                }
                                                else if (item.PaymentSource == PaymentSource.Bank)
                                                {

                                                    <text>Havale/EFT</text>
                                                }
                                                else
                                                {

                                                    <text>Diğer</text>
                                                }
                                            </span>
                                        </td>
                                        <td>
                                            <span class="d-inline-block text-truncate" style="max-width: 200px;" title="@item.Description">
                                                @item.Description
                                            </span>
                                        </td>
                                        <td class="text-right pr-4">
                                            <h6 class="mb-0 font-weight-bold @textClass">
                                                @if (isIncoming)
                                                {
                                                    <text>+</text>
                                                }
                                                else
                                                {

                                                    <text>-</text>
                                                }
                                                @item.Amount.ToString("N2") ₺
                                            </h6>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-column align-items-center justify-content-center py-5">
                        <div class="bg-white p-4 rounded-circle shadow-sm mb-3">
                            <i class="fas fa-file-invoice fa-3x text-muted opacity-50"></i>
                        </div>
                        <h6 class="text-muted">Bu müşteriye ait kayıtlı finansal hareket bulunamadı.</h6>
                    </div>
                }
            </div>

            <div class="modal-footer bg-white d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="fas fa-info-circle mr-1"></i> Son @Model.Count işlem listelenmektedir.
                </div>
                <div>
                    <button type="button" class="btn btn-outline-secondary btn-sm mr-2" data-dismiss="modal">Kapat</button>
                    <a asp-controller="Client" asp-action="FinancialHistory" asp-route-id="@ViewBag.ClientId" class="btn btn-primary btn-sm shadow-sm">
                        <i class="fas fa-external-link-alt mr-1"></i> Tüm Geçmişi İncele
                    </a>
                </div>
            </div>
        </div>
    </div>
