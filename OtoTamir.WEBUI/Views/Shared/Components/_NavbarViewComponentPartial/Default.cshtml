@model OtoTamir.CORE.Identity.Mechanic
@{
    var tarih = DateTime.Now.ToString("d MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"));
    var gun = DateTime.Now.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"));
}

<nav class="app-header navbar navbar-expand bg-body shadow-sm position-relative" style="height: 60px;">
    <div class="container-fluid">

        <ul class="navbar-nav align-items-center">
            <li class="nav-item">
                <a class="nav-link text-secondary" data-lte-toggle="sidebar" href="#" role="button">
                    <i class="bi bi-list fs-4"></i>
                </a>
            </li>
        </ul>

        <div class="position-absolute start-50 translate-middle-x d-none d-md-flex align-items-center text-secondary">
            <i class="bi bi-clock-history me-2 text-primary fs-5"></i>
            <div style="line-height: 1.1;" class="text-center">
                <span  class="d-block fw-bold text-dark" style="font-size: 0.9rem;">
                    @DateTime.Now.ToString("d MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                </span>
                <span id="liveClock" class="d-block text-muted text-uppercase fw-semibold" style="font-size: 0.7rem;">
                   
                </span>
            </div>
        </div>

        <ul class="navbar-nav ms-auto">

            <li class="nav-item d-none d-md-block me-2">
                <a class="nav-link text-secondary" href="#" data-lte-toggle="fullscreen" title="Tam Ekran">
                    <i data-lte-icon="maximize" class="bi bi-arrows-fullscreen"></i>
                    <i data-lte-icon="minimize" class="bi bi-fullscreen-exit" style="display: none"></i>
                </a>
            </li>

            @if (Model != null)
            {
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle d-flex align-items-center" data-bs-toggle="dropdown">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="/Images/@Model.ImageUrl" class="user-image rounded-circle shadow-sm border" alt="User Image" style="width:32px; height:32px; object-fit:cover;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-light border text-primary d-flex align-items-center justify-content-center shadow-sm" style="width: 32px; height: 32px;">
                                <span class="fw-bold small">@Model.UserName.Substring(0, 1).ToUpper()</span>
                            </div>
                        }
                        <span class="d-none d-md-inline ms-2 fw-semibold text-dark">@Model.StoreName</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end border-0 shadow mt-2">
                        <li class="user-header bg-primary text-white bg-gradient">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="/Images/@Model.ImageUrl" class="rounded-circle border border-3 border-white shadow" alt="User Image" style="object-fit:cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-white text-primary d-flex align-items-center justify-content-center mx-auto mb-2 border border-3 border-white" style="width: 90px; height: 90px; font-size: 2rem;">
                                    <i class="bi bi-person"></i>
                                </div>
                            }
                            <p class="mt-2 mb-0 fw-bold">
                                @Model.UserName
                                <small class="d-block opacity-75 fw-normal mt-1">@Model.Skills</small>
                            </p>
                            <small class="opacity-50" style="font-size: 0.7rem;">Kayıt: @Model.CreatedDate.ToString("dd.MM.yyyy")</small>
                        </li>

                        <li class="user-footer bg-light p-2">
                            <div class="d-flex justify-content-between gap-2">
                                <a href="/Account/Profile" class="btn btn-outline-secondary btn-flat flex-grow-1 border-0 shadow-sm bg-white">
                                    <i class="bi bi-person-gear me-1"></i> Profil
                                </a>
                                <a asp-controller="Account" asp-action="Logout" class="btn btn-danger btn-flat flex-grow-1 shadow-sm text-white">
                                    <i class="bi bi-power me-1"></i> Çıkış
                                </a>
                            </div>
                        </li>
                    </ul>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a href="/Account/Login" class="btn btn-primary btn-sm mt-1 px-3 shadow-sm">Giriş Yap</a>
                </li>
            }
        </ul>
    </div>
</nav>
<span id="liveClock" class="d-block text-muted text-uppercase fw-semibold" style="font-size: 0.7rem;">
    @DateTime.Now.ToString("dddd HH:mm")
</span>

<script>
    function updateClock() {
        const now = new Date();
        const options = { weekday: 'long', hour: '2-digit', minute: '2-digit' };
        document.getElementById('liveClock').innerText = now.toLocaleTimeString('tr-TR', options);
    }
    setInterval(updateClock, 1000); // Her saniye güncelle
</script>