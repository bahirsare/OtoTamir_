@model CreateSymptomGroupDTO

<form asp-action="CreateServiceRecord" method="post" class="border rounded shadow-sm p-3 mb-1 bg-light">

    <input type="hidden" asp-for="VehicleId" />
    
    

    <div id="symptomContainer-@Model.VehicleId">
        <!-- İlk semptom otomatik oluşacak -->
    </div>
    @* <div class="col-md-2 offset-md-9 ">
        <label asp-for="AuthorName" class="form-label fw-semibold ">Çalışan</label>
        <input asp-for="AuthorName" class="form-control form-control-sm " />
        <span asp-validation-for="AuthorName" class="text-danger small"></span>
    </div> *@
    

    <div class="d-flex justify-content-between mt-4">
        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="addSymptomRow('symptomContainer-@Model.VehicleId')">
            <i class="bi bi-plus-circle"></i> Yeni Semptom Ekle
        </button>

        <div class="d-flex  col-md-2 offset-md-8 ">
            <label asp-for="AuthorName" class="form-label fw-semibold ">Çalışan</label>
            <input asp-for="AuthorName" class="form-control form-control-sm " />
            <span asp-validation-for="AuthorName" class="text-danger small"></span>
        </div>
        <button type="submit" class="btn btn-success btn-sm">
            <i class="bi bi-check-circle"></i> Kaydet
        </button>

    </div>

</form>

<script>
    // Sayfa yüklendiğinde ilk semptom satırı ekleniyor
    document.addEventListener("DOMContentLoaded", function () {
        addSymptomRow('symptomContainer-@Model.VehicleId');
    });
</script>
