@model List<BalanceLog>
<div class="modal-content shadow-sm">
    <div class="modal-header bg-secondary text-white">
        <h5 class="modal-title" id="balanceLogModalLabel">Bakiye Hareketleri</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
    </div>
    <div class="modal-body p-0">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-sm table-striped align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tarih</th>
                            <th>Ödeme Tutarı</th>
                            <th>Eski Bakiye</th>
                            <th>Yeni Bakiye</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.OrderByDescending(l => l.PaymentDate))
                        {
                            <tr>
                                <td>@log.PaymentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="fw-semibold text-success">@log.Amount.ToString("C")</td>
                                <td>@log.OldBalance.ToString("C")</td>
                                <td>@log.NewBalance.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info m-3">
                Henüz kayıtlı bakiye hareketi bulunmamaktadır.
            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
    </div>
</div>