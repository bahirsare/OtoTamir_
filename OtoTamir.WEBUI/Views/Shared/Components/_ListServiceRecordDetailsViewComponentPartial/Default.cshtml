@model ServiceRecord

<div class="modal-header bg-light border-bottom-0">
    <h5 class="modal-title fw-bold text-dark">
        <i class="fas fa-clipboard-list text-primary me-2"></i>Servis Fişi: #@Model.Id
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
</div>

<div class="modal-body bg-light p-3" style="max-height: 75vh; overflow-y: auto;">

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body p-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h5 class="fw-bold mb-0">@Model.Name</h5>
                    <small class="text-muted">@Model.Vehicle?.Plate | @Model.Vehicle?.Brand @Model.Vehicle?.Model</small>
                </div>
                <div class="text-end">
                    <span class="d-block text-muted small fw-bold">TOPLAM TUTAR</span>
                    <span class="fs-3 fw-bold text-success">@Model.Price.ToString("C2")</span>
                </div>
            </div>

            <div class="row g-2">
                <div class="col-md-4 col-6">
                    <div class="p-2 bg-light rounded border text-center">
                        <small class="text-muted d-block fw-bold" style="font-size: 0.7rem;">DURUM</small>
                        <span class="badge @Model.Status.ToBadgeClass() mt-1">@Model.Status.ToTurkish()</span>
                    </div>
                </div>
                <div class="col-md-4 col-6">
                    <div class="p-2 bg-light rounded border text-center">
                        <small class="text-muted d-block fw-bold" style="font-size: 0.7rem;">GİRİŞ TARİHİ</small>
                        <span class="fw-bold text-dark small">@Model.CreatedDate.ToString("dd.MM.yyyy")</span>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="p-2 bg-light rounded border text-center">
                        <small class="text-muted d-block fw-bold" style="font-size: 0.7rem;">DANIŞMAN</small>
                        <span class="fw-bold text-dark small">@Model.AuthorName</span>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="mt-3 pt-2 border-top">
                    <small class="fw-bold text-secondary">Genel Açıklama:</small>
                    <p class="mb-0 small text-muted fst-italic">@Model.Description</p>
                </div>
            }
        </div>
    </div>

    <h6 class="text-secondary fw-bold ms-1 mb-2">Yapılan İşlemler & Arızalar</h6>

    @if (Model.SymptomList != null && Model.SymptomList.Any())
    {
        <div class="vstack gap-3">
            @foreach (var symptom in Model.SymptomList)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-2 d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-dark"><i class="fas fa-wrench text-secondary me-2"></i>@symptom.Name</span>
                        <span class="badge bg-secondary bg-opacity-10 text-dark border">
                            @symptom.EstimatedCost.ToString("C2")
                        </span>
                    </div>

                    <div class="card-body p-3">
                        <p class="small text-muted mb-2">@symptom.Description</p>

                        @if (symptom.PossibleSpareParts != null && symptom.PossibleSpareParts.Any())
                        {
                            <div class="bg-light rounded p-2 mb-3 border">
                                <small class="fw-bold text-primary d-block mb-1 border-bottom pb-1">Kullanılan Parçalar</small>
                                <table class="table table-sm table-borderless mb-0 small">
                                    <tbody>
                                        @foreach (var part in symptom.PossibleSpareParts)
                                        {
                                            <tr>
                                                <td class="ps-0"><i class="fas fa-cog text-muted me-1"></i> @part.Name</td>
                                                <td class="text-muted">@part.Brand</td>
                                                <td class="text-end fw-bold">@part.SalePrice.ToString("C2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        @if (symptom.ServiceWorkflowLogs != null && symptom.ServiceWorkflowLogs.Any())
                        {
                            <div class="mt-2">
                                <small class="fw-bold text-muted d-block mb-2">İşlem Geçmişi</small>
                                <div class="border-start border-2 ps-3 ms-1" style="border-color: #e9ecef !important;">
                                    @foreach (var log in symptom.ServiceWorkflowLogs)
                                    {
                                        <div class="mb-2 position-relative">
                                            <span class="position-absolute top-0 start-0 translate-middle p-1 bg-secondary border border-light rounded-circle" style="left: -17px !important;"></span>
                                            <div class="small">
                                                <span class="fw-bold text-dark" style="font-size: 0.75rem;">@log.CreatedDate.ToString("dd.MM HH:mm")</span>
                                                <span class="badge bg-light text-secondary border ms-1" style="font-size: 0.65rem;">@log.Status.ToTurkish()</span>
                                            </div>
                                            <div class="text-muted small fst-italic">@log.Content</div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>

                    <div class="card-footer bg-white py-1 text-end">
                        <small class="text-muted" style="font-size: 0.7rem;">Tahmini Süre: <strong>@symptom.EstimatedDaysToFix Gün</strong></small>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-white rounded shadow-sm">
            <i class="fas fa-clipboard-check text-muted opacity-25" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-0">Bu servise ait detaylı işlem kaydı bulunamadı.</p>
        </div>
    }

</div>

