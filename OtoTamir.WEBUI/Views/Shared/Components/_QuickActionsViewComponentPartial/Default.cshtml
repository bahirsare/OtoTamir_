

<div class="card shadow-sm border-0 mb-4" id="quickActionsPanel">
    <div class="card-header bg-white border-bottom-0 pt-3 pb-0">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="card-title text-muted mb-0">
                <i class="bi bi-lightning-charge-fill text-warning me-2"></i>Hızlı İşlemler
            </h5>

            <button class="btn btn-sm btn-light text-muted" type="button" data-bs-toggle="collapse" data-bs-target="#quickActionsBody" aria-expanded="true">
                <i class="bi bi-chevron-expand"></i>
            </button>
        </div>

        <ul class="nav nav-tabs card-header-tabs" id="quickActionTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active fw-bold text-danger" id="expense-tab" data-bs-toggle="tab" data-bs-target="#tab-expense" type="button" role="tab">
                    <i class="bi bi-dash-circle me-1"></i>Gider Ekle
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link fw-bold text-success" id="income-tab" data-bs-toggle="tab" data-bs-target="#tab-income" type="button" role="tab">
                    <i class="bi bi-plus-circle me-1"></i>Gelir Ekle
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link fw-bold text-primary" id="transfer-tab" data-bs-toggle="tab" data-bs-target="#tab-transfer" type="button" role="tab">
                    <i class="bi bi-arrow-left-right me-1"></i>Transfer (Virman)
                </button>
            </li>
        </ul>
    </div>

    <div class="collapse show" id="quickActionsBody">
        <div class="card-body bg-light bg-opacity-10">
            <div class="tab-content">

                <div class="tab-pane fade show active" id="tab-expense" role="tabpanel">
                    <form asp-action="AddExpense" asp-controller="Treasury" method="post" class="row g-3 align-items-end">
                        <div class="col-md-1">
                            <label class="form-label small fw-bold text-muted">Tutar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 text-danger">₺</span>
                                <input type="number" step="1" name="Amount" class="form-control border-start-0 fw-bold text-danger" placeholder="0" required>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold text-muted">Kullanıcı</label>
                            <input type="text" name="Author" class="form-control" placeholder="Kullanıcı" required>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold text-muted">Kategori</label>
                            <select name="CategoryId" class="form-select">
                                <option value="">Genel Gider</option>
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var item in (List<TransactionCategory>)ViewBag.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>

                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-bold text-muted">Açıklama</label>
                            <input type="text" name="Description" class="form-control" placeholder="Örn: Fatura, Yemek..." required>
                        </div>
                       
                        <div class="col-md-1">
                            <label class="form-label small fw-bold text-muted">Kaynak</label>
                            <select name="PaymentSource" id="expenseSrcSelect" class="form-select" onchange="toggleSourceInline('expenseSrcSelect', 'expenseBankDiv', 'expenseCardDiv')">
                                <option value="0">💵 Nakit</option>
                                <option value="1">🏦 Banka</option>
                                <option value="3">💳 Kredi K.</option>
                            </select>
                        </div>

                        <div class="col-md-2 d-none" id="expenseBankDiv">
                            <label class="form-label small fw-bold text-muted text-primary">Hangi Banka?</label>
                            <select name="BankId" class="form-select"><option value="">Seç...</option>@if (ViewBag.Banks != null) { foreach (var item in (List<Bank>)ViewBag.Banks) {
                            <option value="@item.Id">@item.BankName</option>
                                                        } }
</select>
                            
                        </div>

                        <div class="col-md-2 d-none" id="expenseCardDiv">
                            <label class="form-label small fw-bold text-muted text-danger">Hangi Kart?</label>
                            <select name="BankCardId" class="form-select"><option value="">Seç...</option>@if (ViewBag.BankCards != null) { foreach (var item in (List<BankCard>)ViewBag.BankCards) {
                            <option value="@item.Id">@item.CardName</option>
                                                        } }
</select>
                        </div>

                        <div class="col-md-auto ms-auto">
                            <button type="submit" class="btn btn-danger px-4"><i class="bi bi-check-lg me-1"></i>Kaydet</button>
                        </div>
                    </form>
                </div>

                <div class="tab-pane fade" id="tab-income" role="tabpanel">
                    <form asp-action="AddIncome" asp-controller="Treasury" method="post" class="row g-3 align-items-end">
                        <div class="col-md-1">
                            <label class="form-label small fw-bold text-muted">Tutar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0 text-success">₺</span>
                                <input type="number" step="1" name="Amount" class="form-control border-start-0 fw-bold text-success" placeholder="0" required>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold text-muted">Kullanıcı</label>
                            <input type="text" name="Author" class="form-control" placeholder="Kullanıcı" required>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold text-muted">Kategori</label>
                            <select name="CategoryId" class="form-select">
                                <option value="">Genel Gelir</option>
                                @if (ViewBag.Categories != null)
                                {
                                    foreach (var item in (List<TransactionCategory>)ViewBag.Categories)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-bold text-muted">Açıklama</label>
                            <input type="text" name="Description" class="form-control" placeholder="Örn: Hurda satışı..." required>
                        </div>
                        <div class="col-md-1">
                            <label class="form-label small fw-bold text-muted">Hedef</label>
                            <select name="PaymentSource" id="incomeSrcSelect" class="form-select" onchange="toggleSourceInline('incomeSrcSelect', 'incomeBankDiv', null)">
                                <option value="0">💵 Kasaya</option>
                                <option value="1">🏦 Bankaya</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-none" id="incomeBankDiv">
                            <label class="form-label small fw-bold text-muted text-primary">Hangi Banka?</label>
                            <select name="BankId" class="form-select"><option value="">Seç...</option>@if (ViewBag.Banks != null) { foreach (var item in (List<Bank>)ViewBag.Banks) {
                            <option value="@item.Id">@item.BankName</option>
                                                        } }
</select>
                        </div>
                        <div class="col-md-auto ms-auto">
                            <button type="submit" class="btn btn-success px-4"><i class="bi bi-check-lg me-1"></i>Kaydet</button>
                        </div>
                    </form>
                </div>

                <div class="tab-pane fade" id="tab-transfer" role="tabpanel">
                    <form asp-action="AddTransfer" asp-controller="Treasury" method="post" class="row g-3 align-items-end">

                        <div class="col-auto">
                            <label class="form-label small fw-bold text-muted d-block mb-1">İşlem</label>
                            <div class="btn-group" role="group">

                                <input type="radio" class="btn-check" name="Direction" id="btnToBank" value="ToBank" checked onclick="updateTransferUI()">
                                <label class="btn btn-outline-secondary btn-sm" for="btnToBank" title="Kasadan Bankaya">
                                    <i class="bi bi-safe me-1"></i>Yatır
                                </label>

                                <input type="radio" class="btn-check" name="Direction" id="btnToCash" value="ToCash" onclick="updateTransferUI()">
                                <label class="btn btn-outline-secondary btn-sm" for="btnToCash" title="Bankadan Kasaya">
                                    <i class="bi bi-wallet2 me-1"></i>Çek
                                </label>

                                <input type="radio" class="btn-check" name="Direction" id="btnBankToBank" value="BankToBank" onclick="updateTransferUI()">
                                <label class="btn btn-outline-secondary btn-sm" for="btnBankToBank" title="Banka Transferi">
                                    <i class="bi bi-arrow-left-right me-1"></i>Virman
                                </label>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label small fw-bold text-muted">Tutar</label>
                            <div class="input-group input-group-sm">
                                <span class="input-group-text bg-white border-end-0 text-primary">₺</span>
                                <input type="number" step="1" name="Amount" class="form-control border-start-0 fw-bold text-primary" placeholder="0" required>
                            </div>
                        </div>

                        <div class="col-md-2 d-none" id="divSourceBank">
                            <label class="form-label small fw-bold text-muted text-danger">Çıkış Bankası</label>
                            <select name="SourceBankId" class="form-select form-select-sm">
                                <option value="">Seç...</option>
                                @if (ViewBag.Banks != null)
                                {
                                    foreach (var item in (List<Bank>)ViewBag.Banks)
                                    {
                                        <option value="@item.Id">@item.BankName</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-md-2" id="divTargetBank">
                            <label class="form-label small fw-bold text-muted text-success">Giriş Bankası</label>
                            <select name="TargetBankId" class="form-select form-select-sm">
                                <option value="">Seç...</option>
                                @if (ViewBag.Banks != null)
                                {
                                    foreach (var item in (List<Bank>)ViewBag.Banks)
                                    {
                                        <option value="@item.Id">@item.BankName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small fw-bold text-muted">Kullanıcı</label>
                            <input type="text" name="Author" class="form-control form-control-sm" placeholder="Kullanıcı">
                        </div>
                        <div class="col">
                            <label class="form-label small fw-bold text-muted">Açıklama</label>
                            <input type="text" name="Description" class="form-control form-control-sm" placeholder="Opsiyonel">
                        </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary btn-sm px-3">
                                <i class="bi bi-check-lg"></i>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    // 1. GİDER/GELİR SEKME MANTIĞI
    function toggleSourceInline(selectId, bankDivId, cardDivId) {
        var val = document.getElementById(selectId).value;
        var bankDiv = document.getElementById(bankDivId);
        var cardDiv = cardDivId ? document.getElementById(cardDivId) : null;

        if(bankDiv) bankDiv.classList.add('d-none');
        if(cardDiv) cardDiv.classList.add('d-none');

        if (val === '1' && bankDiv) bankDiv.classList.remove('d-none');
        if (val === '3' && cardDiv) cardDiv.classList.remove('d-none');
    }

    // 2. TRANSFER SEKME MANTIĞI (Modern UI)
    function updateTransferUI() {
        var isToBank = document.getElementById('btnToBank').checked;       // Kasa -> Banka
        var isToCash = document.getElementById('btnToCash').checked;       // Banka -> Kasa
        var isBankToBank = document.getElementById('btnBankToBank').checked; // Banka -> Banka

        var divSource = document.getElementById('divSourceBank');
        var divTarget = document.getElementById('divTargetBank');

        // Önce gizle
        divSource.classList.add('d-none');
        divTarget.classList.add('d-none');

        if (isToBank) {
            // Hedef Banka Seçilmeli
            divTarget.classList.remove('d-none');
        }
        else if (isToCash) {
            // Kaynak Banka Seçilmeli
            divSource.classList.remove('d-none');
        }
        else if (isBankToBank) {
            // İkisi de Seçilmeli
            divSource.classList.remove('d-none');
            divTarget.classList.remove('d-none');
        }
    }

    // Yüklendiğinde transfer UI'ını ayarla
    document.addEventListener("DOMContentLoaded", function() {
        updateTransferUI();
    });
</script>